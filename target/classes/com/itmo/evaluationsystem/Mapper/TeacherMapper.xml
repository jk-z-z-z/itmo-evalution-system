<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itmo.evaluationsystem.Mapper.TeacherMapper">

    <!-- 查询教师列表（名称模糊查询 + 分页） -->
    <select id="selectTeacherListByName" resultType="com.itmo.evaluationsystem.Model.vo.TeacherVo">
        SELECT
        id,
        name,
        gender,
        age,
        position_id,
        title_id,
        major,
        email
        FROM teacher
        <where>
            <!-- 名称模糊查询条件 -->
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        <!-- 分页条件 -->
        <if test="offset != null and pageSize != null">
            LIMIT #{offset}, #{pageSize}
        </if>
    </select>

    <!-- 查询教师总数（基于名称搜索条件） -->
    <select id="selectTeacherCountByName" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM teacher
        <where>
            <!-- 与列表查询保持相同的搜索条件 -->
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>

        </where>
    </select>
</mapper>