<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itmo.evaluationSystem.mapper.StudentMapper">

    <!-- 查询学生列表（名称模糊查询 + 分页） -->
    <select id="selectStudentListByName" resultType="com.itmo.evaluationSystem.model.vo.StudentVo">
        SELECT
        id,
        name,
        gender,
        age,
        hdu_id,
        major,
        class_id
        FROM student
        <where>
            <!-- 名称模糊查询条件 -->
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        <!-- 分页条件 -->
        <if test="offset != null and pageSize != null">
            LIMIT #{offset}, #{pageSize}
        </if>
    </select>

    <!-- 查询学生总数（基于名称搜索条件） -->
    <select id="selectStudentCountByName" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM student
        <where>
            <!-- 与列表查询保持相同的搜索条件 -->
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>

        </where>
    </select>
</mapper>